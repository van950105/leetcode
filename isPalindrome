class Solution:
    # @return a boolean
    def isPalindrome(self, x):
        s=str(x)
        if s[0]=="-":
            return False
        while (s[0]==s[-1]):
            s=s[1:-1]
            if len(s)==1 or len(s)==0:
                return True
        return False


#Same issue: using string is really slow but much simpler
